<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="location_title_text_style">
        <item name="android:paddingHorizontal">@dimen/size_space_5dp</item>
        <item name="android:paddingVertical">@dimen/size_space_5dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/size_text_10sp</item>
    </style>

    <style name="location_description_text_style">
        <item name="android:paddingHorizontal">@dimen/size_space_2dp</item>
        <item name="android:paddingVertical">@dimen/size_space_5dp</item>
        <item name="android:textSize">@dimen/size_text_10sp</item>
    </style>

    <style name="details_titles_text_style">
        <item name="android:paddingHorizontal">@dimen/size_space_5dp</item>
        <item name="android:textSize">@dimen/size_text_14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>
</resources>